<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:background="@drawable/background_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="22dp"
            android:textColor="#f3ffc107"
            android:id="@+id/text11"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="2dp"
            android:text="Few quote collectionsthat you should bat eyes on.."
            android:fontFamily="@font/baloo" />

        <ImageView
            android:id="@+id/image11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text11"
            android:layout_marginTop="10dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/quote1" />

        <ImageView
            android:id="@+id/image20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image11"
            android:layout_marginTop="8dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/quote10" />

        <!-- Add more ImageView components here -->

        <ImageView
            android:id="@+id/image21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image20"
            android:layout_marginTop="8dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/quote11" />

        <!-- Add more ImageView components as needed -->

    </RelativeLayout>
</ScrollView>
